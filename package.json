{
  "name": "todolist",
  "private": true,
  "scripts": {
    "build": "yarn test && next build",
    "build:worker": "opennextjs-cloudflare",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "db:generate": "drizzle-kit generate --name",
    "db:migrate:dev": "wrangler d1 migrations apply todolist-database --local",
    "deploy": "yarn build:worker && wrangler deploy",
    "dev": "next dev",
    "format": "prettier --check ./src --ignore-path .gitignore --write",
    "lint": "eslint",
    "preview": "yarn build:worker && yarn wrangler dev",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@emotion/core": "^11.0.0",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.8.1",
    "@epic-web/remember": "^1.1.0",
    "@hono/zod-validator": "^0.4.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@react-aria/button": "^3.11.1",
    "@react-aria/checkbox": "^3.15.1",
    "@react-aria/focus": "^3.19.1",
    "@react-aria/textfield": "^3.16.0",
    "@react-aria/utils": "^3.27.0",
    "@react-aria/visually-hidden": "^3.8.19",
    "@react-stately/toggle": "^3.8.1",
    "@tanstack/react-virtual": "^3.13.0",
    "classnames": "^2.5.1",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.0",
    "hono": "^4.7.0",
    "immer": "^10.1.1",
    "next": "^14.1.4",
    "next-safe-action": "^7.10.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^5.0.0",
    "react-toastify": "^11.0.3",
    "recoil": "^0.7.7",
    "zod": "^3.24.2",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@cloudflare/workers-types": "^4.20250204.0",
    "@eslint/compat": "^1.2.6",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@next/eslint-plugin-next": "^15.1.6",
    "@opennextjs/aws": "^3.4.2",
    "@opennextjs/cloudflare": "^0.5.1",
    "@playwright/test": "^1.50.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.3",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.27",
    "@types/testing-library__jest-dom": "^5.14.8",
    "babel-jest": "^29.4.1",
    "drizzle-kit": "^0.30.4",
    "eslint": "^9.20.0",
    "eslint-config-next": "15.1.7",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "rc",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "prettier": "^3.3.3",
